# ============================================================================
# MONGODB ETL MIGRATION - ENVIRONMENT VARIABLES TEMPLATE
# ============================================================================
# Copy this file to .env and update with your values:
#   cp env.template .env
# ============================================================================

# ============================================================================
# MongoDB (Source Database)
# ============================================================================
MONGO_URI=mongodb://localhost:27017/
MONGO_DATABASE=appcampana

# ============================================================================
# PostgreSQL (Target Database)
# ============================================================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DATABASE=appcampana_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password_here

# ============================================================================
# Cassandra (Target Database - Optional)
# ============================================================================
CASSANDRA_HOSTS=localhost
CASSANDRA_PORT=9042
CASSANDRA_KEYSPACE=appcampana
CASSANDRA_DATACENTER=dc1 #datacenter1

# ============================================================================
# ETL Configuration (Optional)
# ============================================================================
ETL_BATCH_SIZE=1000
ETL_MAX_WORKERS=4
ETL_ENABLE_VALIDATION=true
ETL_DRY_RUN=false
LOG_LEVEL=INFO

# ============================================================================
# Encryption Migration (Optional)
# ============================================================================
# Enable/disable automatic encryption migration
ENABLE_ENCRYPTION_MIGRATION=true

# Log decrypted messages for debugging (WARNING: set to false in production)
LOG_DECRYPTED_MESSAGES=false

